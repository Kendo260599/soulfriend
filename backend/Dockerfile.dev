# Development Dockerfile for Backend
FROM node:18-alpine

WORKDIR /app

# Install nodemon globally for development
RUN npm install -g nodemon ts-node

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Start development server with hot reload
CMD ["npm", "run", "dev"]
