# SoulFriend Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/soulfriend
MONGODB_TEST_URI=mongodb://localhost:27017/soulfriend_test

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================
# Cerebras AI API Key (Required for AI features)
CEREBRAS_API_KEY=your_cerebras_api_key_here

# AI Configuration
AI_MODEL=gemini-1.5-flash
AI_FALLBACK_MODEL=gemini-pro
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@soulfriend.com

# ===========================================
# SMS CONFIGURATION (Optional)
# ===========================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHATBOT_RATE_LIMIT_MAX=50

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# ===========================================
# CHATBOT CONFIGURATION
# ===========================================
CHATBOT_MAX_SESSIONS=1000
CHATBOT_SESSION_TIMEOUT=3600000
CHATBOT_MAX_MESSAGES_PER_SESSION=100
CHATBOT_CRISIS_DETECTION_ENABLED=true
CHATBOT_EMERGENCY_CONTACTS_ENABLED=true

# ===========================================
# EXTERNAL SERVICES CONFIGURATION
# ===========================================
# Google Analytics (Optional)
GA_TRACKING_ID=your_ga_tracking_id

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
DEBUG_MODE=true
MOCK_DATA_ENABLED=false
TEST_MODE=false

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Set these in production
# NODE_ENV=production
# PORT=80
# HOST=0.0.0.0
# LOG_LEVEL=warn
# DEBUG_MODE=false
# MOCK_DATA_ENABLED=false

# ===========================================
# EMERGENCY CONTACTS (Vietnam)
# ===========================================
EMERGENCY_POLICE=113
EMERGENCY_MEDICAL=115
EMERGENCY_FIRE=114
EMERGENCY_UNIFIED=112
PSYCHOLOGICAL_HOTLINE=1900 599 958
WOMEN_SUPPORT_HOTLINE=1900 969 969
CHILD_HELPLINE=111

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_AI_CHATBOT=true
FEATURE_CRISIS_DETECTION=true
FEATURE_EMERGENCY_CONTACTS=true
FEATURE_USER_PROFILES=true
FEATURE_TEST_RESULTS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
