# ==============================================================================
# SoulFriend Docker Environment Configuration
# Copy this file to .env for docker-compose
# ==============================================================================

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_in_production
MONGO_PORT=27017

# Backend Configuration
BACKEND_PORT=5000

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Admin Account
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@soulfriend.vn
DEFAULT_ADMIN_PASSWORD=ChangeThisSecurePassword123!

# CORS
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=info

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
